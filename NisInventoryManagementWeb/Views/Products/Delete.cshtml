@model NisInventoryManagementMvc.Models.ProductViewModel

<h2>商品削除</h2>

<h3>本当に削除しますか？</h3>
<div>
    <div class="form-group">
        <label>商品ID:</label>
        <p>@Model.ProductId</p>
    </div>

    <div class="form-group">
        <label>商品名:</label>
        <p>@Model.ProductName</p>
    </div>

    <div class="form-group">
        <label>価格:</label>
        <p>@Model.Price</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="削除" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">キャンセル</a>
    </form>
</div>
