@model NisInventoryManagementMvc.Models.ProductViewModel

<h2>商品削除</h2>

<h3>本当に削除しますか？</h3>
<div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(model => model.ProductId)</label>
        <p>@Html.DisplayFor(model => model.ProductId)</p>
    </div>

    <div class="form-group">
        <label>@Html.DisplayNameFor(model => model.ProductName)</label>
        <p>@Html.DisplayFor(model => model.ProductName)</p>
    </div>

    <div class="form-group">
        <label>@Html.DisplayNameFor(model => model.Price)</label>
        <p>@Html.DisplayFor(model => model.Price)</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="削除" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">キャンセル</a>
    </form>
</div>
