@model NisInventoryManagementMvc.Models.ProductViewModel

<h2>商品詳細</h2>

<div class="form-group">
    <label>商品ID:</label>
    <p>@Model.ProductId</p>
</div>

<div class="form-group">
    <label>商品名:</label>
    <p>@Model.ProductName</p>
</div>

<div class="form-group">
    <label>価格:</label>
    <p>@Model.Price</p>
</div>

<a asp-action="Index" class="btn btn-primary">戻る</a>
<a asp-action="Delete" asp-route-id="@Model.ProductId" class="btn btn-danger">削除</a>
