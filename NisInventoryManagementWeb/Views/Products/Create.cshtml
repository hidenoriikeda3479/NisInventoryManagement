@model NisInventoryManagementMvc.Models.ProductViewModel

<h2>新規商品作成</h2>

<form asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label for="ProductName" class="control-label">商品名</label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Price" class="control-label">価格</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="作成" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">キャンセル</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
